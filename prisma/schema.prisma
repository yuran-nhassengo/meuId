generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model DocumentosEncontrados {
  id            String      @id @default(cuid())
  nome          String
  tipoDocumento String
  contacto      String
  linkImagem    String
  descricao     String
  localizacao   String
  usuarioId     String
  usuario       Usuario    @relation(fields: [usuarioId], references: [id])
}

model DocumentosPerdidos {
  id            String      @id @default(cuid())
  nome          String
  tipoDocumento String
  contacto      String
  descricao     String
  localizacao   String
  usuarioId     String
  usuario       Usuario    @relation(fields: [usuarioId], references: [id])
}

model Usuario {
  id                String                @id @default(cuid())
  nome              String
  email             String                @unique
  senha             String
  dataCriacao       DateTime             @default(now())
  documentos        DocumentosEncontrados[]
  documentosPerdidos DocumentosPerdidos[]
}

